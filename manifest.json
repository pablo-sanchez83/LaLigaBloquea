{
  "manifest_version": 3,
  "name": "Detector de Cloudflare",
  "version": "1.0.0",
  "description": "Detecta si una página web está alojada en Cloudflare y te avisa si será bloqueada por LaLiga",
  "permissions": [
    "storage",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  }
} 