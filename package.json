{
  "name": "laliga-bloquea",
  "displayName": "Laliga bloquea",
  "version": "0.0.1",
  "description": "Extension que dictamina si una web será bloqueada por LaLiga durante los findes de semana",
  "author": "Pablo Sánchez",  
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
    "package": "plasmo package"
  },
  "dependencies": {
    "@plasmohq/storage": "1.15.0",
    "plasmo": "0.90.3",
    "react": "18.2.0",
    "react-dom": "18.2.0"
  },
  "devDependencies": {
    "@types/chrome": "0.0.260",
    "@types/node": "20.11.30",
    "@types/react": "18.2.66",
    "@types/react-dom": "18.2.22",
    "typescript": "5.4.2"
  },
  "manifest": {
    "permissions": ["storage"],
    "host_permissions": ["<all_urls>", "https://dns.google/*"]
  }
}
